<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:drawableLeft="@drawable/ic_baseline_id"
                android:drawablePadding="5dp"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:text=""/>
            <TextView
                android:id="@+id/occupency_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_baseline_people_alt_24"
                android:drawablePadding="5dp"
                android:maxLines="1"
                android:text=""/>

            <TextView
                android:id="@+id/created_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_baseline_create_24"
                android:drawablePadding="5dp"
                android:maxLines="1"
                android:text=""/>

            <TextView
                android:id="@+id/room_avilable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_baseline_meeting_room_24"
                android:drawablePadding="5dp"
                android:maxLines="1"
                android:text=""/>

            <TextView
                android:id="@+id/room_not_avilable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:drawableLeft="@drawable/ic_baseline_no_meeting_room_24"
                android:drawablePadding="5dp"
                android:maxLines="1"
                android:text=""/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>